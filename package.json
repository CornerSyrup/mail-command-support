{
    "name": "smtp-command-support",
    "displayName": "smtp-command-support",
    "description": "SMTP command snippet and syntax highlight",
    "version": "0.1.0",
    "scripts": {
        "build": "vsce package"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/KleinChiu/smtp-command-support.git"
    },
    "engines": {
        "vscode": ">=1.0.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "contributes": {
        "languages": [
            {
                "id": "smtp",
                "aliases": [
                    "SMTP"
                ],
                "extensions": [
                    ".smtp"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "smtp",
                "scopeName": "source.smtp",
                "path": "./syntaxes/smtp.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "smtp",
                "path": "./snippets/snippets.code-snippets"
            }
        ]
    }
}
