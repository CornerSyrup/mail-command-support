{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "smtp",
    "patterns": [
        {
            "include": "#keywords"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.other",
                    "match": "(?i:^(helo|data|quit|rset|vrfy|noop|turn|expn|help|(mail|send|soml|saml)\\s+from|rcpt\\s+to)\\b)"
                }
            ]
        }
    },
    "scopeName": "source.smtp"
}
