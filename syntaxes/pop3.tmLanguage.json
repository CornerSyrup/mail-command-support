{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "pop3",
    "patterns": [
        {
            "include": "#keywords"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.other",
                    "match": "(?i:^(user|pass|quit|stat|list|noop|rset|(retr|dele|uidl)\\s+\\d+|top\\s+\\d+\\s+\\d+)\\b)"
                }
            ]
        }
    },
    "scopeName": "source.pop3"
}
